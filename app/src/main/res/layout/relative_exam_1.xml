<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 수원 스마트앱 -->
    <TextView
        android:id="@+id/suwonsmart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#673AB7"
        android:text="수원스마트앱"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/suwonsmart"
        android:text="왼쪽"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/suwonsmart"
        android:text="오른쪽"
        android:textSize="24dp" />

    <!-- 수원 스마트앱 -->
    <!-- 왼쪽 Android -->

    <TextView
        android:id="@+id/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#73e3ff"
        android:text="android"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/android"
        android:text="위쪽"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/android"
        android:text="오른쪽"
        android:textSize="24dp" />

    <!-- 왼쪽 Android -->
    <!-- 오른쪽 Hello -->
    <TextView
        android:id="@+id/Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#75ff8c"
        android:text="Hello"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위쪽"
        android:textSize="24dp"
        android:layout_above="@id/Hello"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="왼쪽"
        android:textSize="24dp"
        android:layout_toLeftOf="@id/Hello"
        android:layout_alignParentBottom="true"

        />


</RelativeLayout>